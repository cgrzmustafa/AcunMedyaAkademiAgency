@model  AcunMedyaAkademiAgency.Entities.Project
@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Proje Güncelleme Sayfası</h4>
            <p class="card-description">Proje ile güncelleme işlemlerini buradan yapabilirsiniz.</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Id</label>
                    @Html.TextBoxFor(x => x.ProjectId, new { @class = "table table-bordered" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Proje Adı</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "table table-bordered" })
                </div>
                <div class="form-group">
                    <label for="exampleInputCity1">Proje Resim Yolu</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "table table-bordered" })
                </div>
                <div class="form-group">
                    <label for="exampleInputCity1">Proje Kategorisi</label>
                    @Html.TextBoxFor(x => x.CategoryId, new { @class = "table table-bordered" })
                </div>
                <button type="submit" class="btn btn-primary mr-2"> Güncelle </button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>

