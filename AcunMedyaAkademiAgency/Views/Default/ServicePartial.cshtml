@model List<AcunMedyaAkademiAgency.Entities.Service>
<section class="page-section" id="services">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Hizmetlerimiz</h2>
            <h3 class="section-subheading text-muted">Sunduğumuz dijital pazarlama, web tasarımı ve sosyal medya yönetimi gibi hizmetlerle markanızı güçlendiriyor, hedeflerinize ulaşmanız için çözümler üretiyoruz. Her adımda yanınızdayız.</h3>
        </div>
        <div class="row text-center">
            @foreach (var item in Model)
            {
                <div class="col-lg-4">
                    <div class="team-member">
                        <img class="mx-auto rounded-circle" src="@item.ImageUrl" alt="..." />
                        <h4>@item.Title</h4>
                        <p class="text-muted">@item.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>