
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="row">
    <div class="col-sm-12 mt-3">
        <h3>İstatistikler</h3>
    </div>
    <div class="col-xl-12 col-lg-12 stretch-card grid-margin">
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-warning">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Bildirim Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.bildirimsayisi
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-bell bg-inverse-icon-warning"></i>
                    </div>
                    <h6 class="text-white">Tüm bildirimler</h6>
                </div>
            </div>
        </div>
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-danger">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Projeler Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.projectsayisi
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-folder bg-inverse-icon-danger"></i>
                    </div>
                    <h6 class="text-white">Tüm Projeler</h6>
                </div>
            </div>
        </div>
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-primary">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head"> Grafik Tasarım Projeleri </p>
                            <h2 class="text-white">
                                @ViewBag.grafikCount
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-brush bg-inverse-icon-primary"></i>
                    </div>
                    <h6 class="text-white">Tüm Projeler</h6>
                </div>
            </div>
        </div>

        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-success">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Personel Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.personelsayisi
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-account-group bg-inverse-icon-success"></i>
                    </div>
                    <h6 class="text-white">Tüm Personeller</h6>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-xl-12 col-lg-12 stretch-card grid-margin">
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-warning">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Mesaj Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.mesajsayisi
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-message bg-inverse-icon-warning"></i>
                    </div>
                    <h6 class="text-white">Tüm Mesajlar</h6>
                </div>
            </div>
        </div>
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-danger">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Hizmetler Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.hizmetsayisi
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-domain bg-inverse-icon-danger"></i>
                    </div>
                    <h6 class="text-white">Tüm Hizmetler</h6>
                </div>
            </div>
        </div>
        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-primary">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head"> Sosyal Medya Yönetimi Projeleri </p>
                            <h2 class="text-white">
                                @ViewBag.sosyalmedyaCount
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-facebook bg-inverse-icon-primary"></i>
                    </div>
                    <h6 class="text-white">Tüm Projeler</h6>
                </div>
            </div>
        </div>

        <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
            <div class="card bg-success">
                <div class="card-body px-3 py-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="color-card">
                            <p class="mb-0 color-card-head">Kategori Sayısı</p>
                            <h2 class="text-white">
                                @ViewBag.kategorisayisi
                            </h2>
                        </div>
                        <i class="card-icon-indicator mdi mdi-view-grid bg-inverse-icon-success"></i>
                    </div>
                    <h6 class="text-white">Tüm Kategoriler</h6>
                </div>
            </div>
        </div>
    </div>

</div>

@Html.Action("StaffPartial", "Dashboard")

@Html.Action("CustomerPartial", "Dashboard")

@Html.Action("NotificationPartial", "Dashboard")


