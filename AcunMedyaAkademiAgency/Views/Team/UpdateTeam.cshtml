@model  AcunMedyaAkademiAgency.Entities.Team
@{
    ViewBag.Title = "UpdateTeam";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Güncelleme Sayfası</h4>
            <p class="card-description">Personeller ile güncelleme işlemlerini buradan yapabilirsiniz.</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Id</label>
                    @Html.TextBoxFor(x => x.TeamId, new { @class = "table table-bordered" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Personel Adı Soyadı</label>
                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "table table-bordered" })
                </div>
                <div class="form-group">
                    <label for="exampleInputCity1">Personel Resim Yolu</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "table table-bordered" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Personel Cinsiyeti</label>
                    @Html.TextBoxFor(x => x.Gender, new { @class = "table table-bordered" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Personel Şehri</label>
                    @Html.TextBoxFor(x => x.City, new { @class = "table table-bordered" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Personel Departmanı</label>
                    @Html.TextBoxFor(x => x.BranchId, new { @class = "table table-bordered" })
                </div>
                <button type="submit" class="btn btn-primary mr-2"> Güncelle </button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>

