@model List<AcunMedyaAkademiAgency.Entities.Service>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmetler Sayfası</h4>
            <p class="card-description">
                Hizmetlerle ilgili işlemleri buradan yapabilirsiniz.
            </p>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Adı</th>
                            <th>Resmi</th>
                            <th>Açıklaması</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Title</td>
                                <td><img src="@item.ImageUrl" style="width:75px;height:75px;" alt="Hizmet Görseli" /></td>
                                <td>
                                    @{
                                        var words = item.Description.Split(' ');
                                        for (int i = 0; i < words.Length; i++)
                                        {
                                            @words[i] @(" ")
                                            if ((i + 1) % 3 == 0)
                                            {
                                                <br />
                                            }
                                        }
                                    }
                                </td>
                                <td><a class="btn btn-danger" href="/Service/DeleteService/@item.ServiceId"><i class="fa fa-trash"></i>Sil</a></td>
                                <td><a class="btn btn-success" href="/Service/UpdateService/@item.ServiceId"><i class="fa fa-pencil"></i>Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Service/CreateService" class="btn btn-info"><i class="mdi mdi-file-check btn-icon-append">Yeni Hizmet Girişi</i></a>
            </div>
        </div>
    </div>
</div>

