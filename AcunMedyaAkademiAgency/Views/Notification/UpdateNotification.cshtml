@model  AcunMedyaAkademiAgency.Entities.Notification
@{
    ViewBag.Title = "UpdateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bildirim Güncelleme Sayfası</h4>
            <p class="card-description">Bildirim ile güncelleme işlemlerini buradan yapabilirsiniz.</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Id</label>
                    @Html.TextBoxFor(x => x.NotificationId, new { @class = "table table-bordered" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Adı Soyadı</label>
                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "table table-bordered" })
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Bildirim Açıklaması</label>
                    <textarea class="form-control"
                              id="exampleTextarea1"
                              rows="4" name="Description">@Model.Description</textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputCity1">Bildirim Resim Yolu</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "table table-bordered" })
                </div>
                <button type="submit" class="btn btn-primary mr-2"> Güncelle </button>
                <button class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>

